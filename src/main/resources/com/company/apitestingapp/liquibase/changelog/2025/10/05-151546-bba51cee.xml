<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="api-testing-app">
        <addColumn tableName="REQUEST_EXECUTION">
            <column name="REQUEST_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="api-testing-app">
        <addForeignKeyConstraint baseColumnNames="REQUEST_ID" baseTableName="REQUEST_EXECUTION"
                                 constraintName="FK_REQUEST_EXECUTION_ON_REQUEST" referencedColumnNames="ID"
                                 referencedTableName="REQUEST"/>
    </changeSet>
</databaseChangeLog>