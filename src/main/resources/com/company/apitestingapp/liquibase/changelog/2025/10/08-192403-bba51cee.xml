<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="api-testing-app">
        <createTable tableName="HEADER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_HEADER"/>
            </column>
            <column name="REQUEST_ID" type="UUID"/>
            <column name="KEY_" type="CLOB"/>
            <column name="VALUE_" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="api-testing-app">
        <createTable tableName="QUERY_PARAMETER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_QUERY_PARAMETER"/>
            </column>
            <column name="REQUEST_ID" type="UUID"/>
            <column name="KEY_" type="CLOB"/>
            <column name="VALUE_" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="api-testing-app">
        <addColumn tableName="REQUEST">
            <column name="COLLECTION_ID" type="UUID"/>
            <column name="ENVIRONMENT_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="api-testing-app">
        <createIndex indexName="IDX_HEADER_REQUEST" tableName="HEADER">
            <column name="REQUEST_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="REQUEST_ID" baseTableName="HEADER"
                                 constraintName="FK_HEADER_ON_REQUEST" referencedColumnNames="ID"
                                 referencedTableName="REQUEST"/>
    </changeSet>
    <changeSet id="5" author="api-testing-app">
        <createIndex indexName="IDX_QUERY_PARAMETER_REQUEST" tableName="QUERY_PARAMETER">
            <column name="REQUEST_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="REQUEST_ID" baseTableName="QUERY_PARAMETER"
                                 constraintName="FK_QUERY_PARAMETER_ON_REQUEST" referencedColumnNames="ID"
                                 referencedTableName="REQUEST"/>
    </changeSet>
    <changeSet id="6" author="api-testing-app">
        <addForeignKeyConstraint baseColumnNames="COLLECTION_ID" baseTableName="REQUEST"
                                 constraintName="FK_REQUEST_ON_COLLECTION" referencedColumnNames="ID"
                                 referencedTableName="COLLECTION"/>
    </changeSet>
    <changeSet id="7" author="api-testing-app">
        <addForeignKeyConstraint baseColumnNames="ENVIRONMENT_ID" baseTableName="REQUEST"
                                 constraintName="FK_REQUEST_ON_ENVIRONMENT" referencedColumnNames="ID"
                                 referencedTableName="ENVIRONMENT"/>
    </changeSet>
    <changeSet id="8" author="api-testing-app">
        <dropColumn columnName="headers" tableName="request"/>

        <dropColumn columnName="query_params" tableName="request"/>
    </changeSet>
</databaseChangeLog>