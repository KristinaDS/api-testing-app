<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="api-testing-app">
        <createTable tableName="COLLECTION_FOLDER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_COLLECTION_FOLDER"/>
            </column>
            <column name="PARENT_FOLDER_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="api-testing-app">
        <addColumn tableName="COLLECTION_ITEM">
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="PARENT_FOLDER_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="api-testing-app">
        <addColumn tableName="COLLECTION_ITEM">
            <column name="DTYPE" type="VARCHAR(31)"/>
        </addColumn>

        <update tableName="COLLECTION_ITEM">
            <column name="DTYPE" value="CollectionItem"/>
            <where>DTYPE is null</where>
        </update>
    </changeSet>
    <changeSet id="4" author="api-testing-app">
        <addColumn tableName="COLLECTION_ITEM">
            <column name="ITEM_TYPE" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="ITEM_TYPE" defaultNullValue="''" tableName="COLLECTION_ITEM"/>
    </changeSet>
    <changeSet id="5" author="api-testing-app">
        <createIndex indexName="IDX_COLLECTION_ITEM_PARENT" tableName="COLLECTION_ITEM">
            <column name="PARENT_FOLDER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="PARENT_FOLDER_ID" baseTableName="COLLECTION_ITEM"
                                 constraintName="FK_COLLECTION_ITEM_ON_PARENT_FOLDER" referencedColumnNames="ID"
                                 referencedTableName="COLLECTION_FOLDER"/>
    </changeSet>
    <changeSet id="6" author="api-testing-app">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="COLLECTION_FOLDER"
                                 constraintName="FK_COLLECTION_FOLDER_ON_ID" referencedColumnNames="ID"
                                 referencedTableName="COLLECTION_ITEM"/>
    </changeSet>
    <changeSet id="7" author="api-testing-app">
        <addForeignKeyConstraint baseColumnNames="PARENT_FOLDER_ID" baseTableName="COLLECTION_FOLDER"
                                 constraintName="FK_COLLECTION_FOLDER_ON_PARENT_FOLDER" referencedColumnNames="ID"
                                 referencedTableName="COLLECTION_FOLDER"/>
    </changeSet>
    <changeSet id="8" author="api-testing-app">
        <dropColumn columnName="parent_collection_id" tableName="collection"/>
    </changeSet>
</databaseChangeLog>